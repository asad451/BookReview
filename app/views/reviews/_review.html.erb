<div class="review-rating" data-score="<%= review.rating %>"></div>
<p> <%= review.comment %> </p>

<% if user_signed_in? %>
	<% if review.user_id == current_user.id %>
		<%= link_to "Edit", edit_book_review_path(review.book, review) %>   <!-- 'review.book' will access current book we're dealing with and 'review' will access instance of that review -->
		<%= link_to "Delete", book_review_path(review.book, review), method: :delete, data: {confirm: "Are you sure?"} %>
	<% end %>
<% end %>